{
  "name": "tailportal",
  "version": "0.1.0",
  "description": "Create a Tailscale exit node with simple commands",
  "keywords": [
    "tailscale",
    "exit-node",
    "vpn",
    "cloud",
    "cli"
  ],
  "author": "Yukaii",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yukaii/tailportal.git"
  },
  "bugs": {
    "url": "https://github.com/Yukaii/tailportal/issues"
  },
  "homepage": "https://github.com/Yukaii/tailportal#readme",
  "main": "dist/index.js",
  "bin": {
    "tailportal": "dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "commonjs",
  "scripts": {
    "build": "esbuild index.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/index.js --external:@pulumi/pulumi --external:@pulumi/gcp --external:@ediri/vultr --external:commander --external:dotenv --external:nanoid --external:tsx --external:zod --external:vultr-types",
    "prepublishOnly": "npm run build",
    "test": "../../e2e/test-installation.sh",
    "start": "tsx index.ts",
    "fmt": "npx prettier --write ."
  },
  "trustedDependencies": [
    "protobufjs"
  ],
  "dependencies": {
    "@ediri/vultr": "^2.19.0",
    "@pulumi/gcp": "^7.20.0",
    "@pulumi/pulumi": "^3.114.0",
    "commander": "^13.1.0",
    "dotenv": "^16.4.5",
    "nanoid": "^5.0.7",
    "tsx": "^4.7.3",
    "vultr-types": "workspace:*",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.5"
  }
}
